<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.submissionmade">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.submissionmade.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.noActionBar">
        <activity android:name="com.example.submissionmade.SettingActivity" />
        <activity android:name="com.example.submissionmade.tvShow.TvShowDetailActivity" />
        <activity android:name="com.example.submissionmade.movies.MoviesDetailActivity" />
        <activity android:name="com.example.submissionmade.MainActivity" />
        <activity android:name="com.example.submissionmade.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>